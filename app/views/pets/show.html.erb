<div class="container border border-5">
  <div class="top-info d-flex justify-content-around mt-3">
    <%= link_to family_path(current_user.user_families.take.family_id) do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>
    <h1>Pet Details</h1>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fas fa-ellipsis-v"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <%= link_to "Add Pet", "#", class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Edit Pet", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Delete Pet", "#", class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>
  <div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card justify-content-center align-items-center">
      <div class="upper">
        <img src="https://i.imgur.com/Qtrsrk5.jpg" class="img-fluid">
      </div>
      <div class="user text-center">
        <div class="profile">
          <img src="https://i.imgur.com/JgYD2nQ.jpg" class="rounded-circle" width="80">
        </div>
      </div>
      <div class="mt-5 text-center">
        <h4 class="mb-0"> <%= @pet.name %></h4>
        <span class="text-muted d-block mb-2"><%= @pet.age %> Years old</span>
        <span class="text-muted d-block mb-2"><%= @pet.birthdate.strftime("%B %d, %Y")  %></span>
        <div class="d-flex justify-content-between align-items-center mt-4 px-4">
          <div class="stats">
            <h6 class="mb-0">Color</h6>
            <span><%= @pet.color.capitalize %></span>
          </div>
          <div class="stats">
            <h6 class="mb-0">Species</h6>
            <span><%= @pet.species.capitalize %></span>
          </div>
          <div class="stats">
            <h6 class="mb-0">Gender</h6>
            <span>  <%= @pet.gender.capitalize %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
