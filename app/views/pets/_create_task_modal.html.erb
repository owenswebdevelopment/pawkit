<div class="mb-3">
  <button type="button"
    class="btn btn-success rounded-circle fab-button"
    data-bs-toggle="modal" data-bs-target="#taskModal1">
    <i class="fa-solid fa-plus"></i>
  </button>
  <!-- Modal -->
  <div class="modal fade" id="taskModal1" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="taskModalLabel">Create Task</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="m-5">
            <%= render "pets/create_task_form", family: @family, pet: @pet, task: @task %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
