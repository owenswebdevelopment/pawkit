<%# Create new Pet %>
<% content_for :body_class, "family-home-bg" %>
<div class="container">
  <h1 class="text-center text-white">Add Pet</h1>
  <div class = "d-flex justify-content-center align-items-center">
    <%= image_tag "default-avatar.jpg", class: "avatar-large mt-1", alt: "avatar-large", style: "width: 200px;" %>
  </div>
  <div class="pet-create-form mt-1 mb-5 mx-5">
    <%= simple_form_for [@family, @pet] do |f| %>
      <%= f.input :name %>
      <%= f.input :age %>
      <%= f.input :gender %>
      <%= f.input :color %>
      <%= f.input :birthdate %>
      <%= f.input :species %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-between align-items-end">
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Back", :back %>
      </div>
    <% end %>
  </div>
</div>
