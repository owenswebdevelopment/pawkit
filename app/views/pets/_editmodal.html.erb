<!-- Modal -->
<div class="modal fade" id="peteditModal" aria-labelledby="peteditModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="peteditModalLabel">Edit Pet</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="m-5">
          <%= render "pets/edit", family: @family, pet: @pet %>
        </div>
      </div>
    </div>
  </div>
</div>
