<div class="modal fade" id="petaddModal" aria-labelledby="petaddModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="petaddModalLabel">Add Pet</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="m-5">
          <%= render "pets/new", family: family, pet: pet %>
        </div>
      </div>
    </div>
  </div>
</div>
