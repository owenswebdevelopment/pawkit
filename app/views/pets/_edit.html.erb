<div class="container">
  <div class = "d-flex justify-content-center align-items-center">
    <% if pet.photo.attached? %>
      <%= cl_image_tag pet.photo.key,
              class: "rounded-circle border border-3 border-light shadow",
              style: "width: 200px; height: 200px; " %>
    <% else %>
      <%= image_tag "default-avatar.jpg",
              class: "rounded-circle border border-3 border-light shadow",
              style: "width: 200px; height: 200px;" %>
    <% end %>
  </div>
  <div class="pet-create-form mt-1 mb-5 mx-1">
    <%= simple_form_for pet do |f| %>
      <%= f.input :name %>
      <%= f.input :age %>
      <%= f.input :gender %>
      <%= f.input :color %>
      <%= f.input :birthdate %>
      <%= f.input :species %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-between align-items-end">
        <%= f.button :submit, "Save Edit", class: "btn btn-primary" %>
        <%= link_to "Delete", pet_path(pet), class:'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
