<div class="mb-3">
  <button type="button" class="btn btn-primary fixed-button" data-bs-toggle="modal" data-bs-target="#taskModal">
    <i class="fa-gold fa-solid fa-plus" style="font-size: 28px; color: white;"></i>
  </button>
  <div class="mb-3">
    <!-- Modal -->
    <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="taskModalLabel">Create Task</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="m-5">
              <%= render "pets/create_form", family: @family, task: @task %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
