<div class="container my-3 d-flex justify-content-center">
  <%= simple_form_for [family, memory],
      html: {
        class: "input-bar d-flex justify-content-around align-items-center gap-3 px-3 py-2 shadow",
        style: "max-width: 500px; width: 100%; border-radius: 18px; background: white;",
        data: {
          controller: "reset-input",
          action: "turbo:submit-end->reset-input#reset"
        },
        multipart: true
      } do |f| %>
    <!-- Image Upload -->
    <div class="d-flex align-items-center gap-2">
      <label for="memory_media" class="m-0" style="cursor: pointer;">
        <i class="fa-solid fa-image fs-5 text-muted"></i>
      </label>
      <%= f.input :media,
        as: :file,
        label: false,
        input_html: {
          multiple: true,
          class: "d-none",
          id: "memory_media",
          data: { reset_input_target: "input" }
        } %>
    </div>
    <!-- Text Input -->
    <div class="flex-grow-1">
      <%= f.input :text,
        label: false,
        input_html: {
          placeholder: "Write a memory...",
          class: "form-control border-0 bg-transparent",
          style: "min-height: 38px;"
        },
        wrapper_html: { class: "mb-0" } %>
    </div>
    <!-- Submit Button -->
    <%= f.button :submit, "Share", class: "btn btn-primary btn-sm mb-0" %>
  <% end %>
</div>
