<div class="mb-3">
  <button type="button"
  class="btn btn-success rounded-circle"
  style="width: 56px; height: 56px; padding: 0; display:flex; justify-content: center; align-items: center;"
   data-bs-toggle="modal" data-bs-target="#taskModal">
    <i class="fa-solid fa-plus p-1" style="font-size: 52px; color: white;"></i>
  </button>
  <!-- Modal -->
  <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="taskModalLabel">Create Task</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="m-5">
            <%= render "tasks/create_form", family: @family, task: @task %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
