<%= simple_form_for [family, task] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.input :recurrence, collection: [["None", "none"], ["Daily", "daily"], ["Weekly", "weekly"], ["Monthly", "monthly"]], prompt: "Select recurrence"  %>
  <%= f.input :pet, collection: family.pets %>
  <%= f.submit "Create Task", class: "btn btn-primary" %>
<% end %>
