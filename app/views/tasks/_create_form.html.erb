<%= simple_form_for [family, task] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.input :pet, collection: family.pets, as: :check_boxes,  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
  <%= f.submit "Create Task", class: "btn btn-primary" %>
<% end %>
