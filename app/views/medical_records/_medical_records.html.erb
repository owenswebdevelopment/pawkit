<h2>Medical Records</h2>
<% if @pet.medical_records.any? %>
  <ul>
    <% @pet.medical_records.each do |record| %>
      <li>
        <strong>Diagnosis:</strong> <%= record.diagnosis %> <br>
        <strong>Visit Date:</strong> <%= record.visit_date.strftime("%B %d, %Y") %> <br>
        <strong>Notes:</strong> <%= record.notes %> <br>
        <%= link_to "View Details", pet_medical_record_path(@pet, record) %> |
        <%= link_to "Edit", edit_pet_medical_record_path(@pet, record) %> |
        <%= link_to "Delete", pet_medical_record_path(@pet, record), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No medical records available for this pet.</p>
<% end %>
