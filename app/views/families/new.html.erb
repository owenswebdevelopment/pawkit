<div class="container text-start py-5">
  <div class="card p-4 shadow-sm">
    <h2 class="text-center mb-4">Create a New Family</h2>
    <%= simple_form_for @family, html: { multipart: true } do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create Family", class: 'btn btn-success mt-3 w-100' %>
    <% end %>
  </div>
</div>
