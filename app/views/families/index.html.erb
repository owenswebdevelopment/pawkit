<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="w-100" style="max-width: 400px;">
    <h2 class="text-center mb-4">Select a family to join:</h2>
    <%= simple_form_for :user_family, url: join_family_action_path, method: :post do |f| %>
      <div class="mb-3">
        <%= f.input :family_id,
            collection: @families,
            label: "Choose a family",
            prompt: "Select a family",
            value_method: :id,
            label_method: :name,
            input_html: { class: "form-select" } %>
      </div>
      <div class="d-grid">
        <%= f.button :submit, "Join Family", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
