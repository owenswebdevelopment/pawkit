<h1 class="text-center py-4">Nearby Search</h1>
<!-- The search category area -->
<div data-controller="google-maps" class="container">
  <div class="d-flex justify-content-center align-items-center mx-4 mb-4">
    <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
      <input type="checkbox" class="btn-check" id="vet" name="category" value="Vet">
      <label class="btn btn-outline-primary" for="vet">Vets</label>
      <input type="checkbox" class="btn-check" id="petshop" name="category" value="Petshop">
      <label class="btn btn-outline-primary" for="petshop">Petshops</label>
      <input type="checkbox" class="btn-check" id="park" name="category" value="park">
      <label class="btn btn-outline-primary" for="park">Park</label>
      <input type="checkbox" class="btn-check" id="petcafe" name="category" value="petcafe">
      <label class="btn btn-outline-primary" for="petcafe">Pet Cafe</label>
    </div>
    <button type="button"
            class="btn btn-success ms-2 btn-sm"
            data-action="google-maps#search">
      <i class="fa-solid fa-search fa-sm"></i>
    </button>
  </div>
  <div class="float-end me-1" style="margin-top: -120px">
    <%= link_to favorites_path(@location) do %>
      <i class="fa-solid fa-star fa-xl"></i>
    <% end %>
  </div>
  <div class="container mb-4">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-10">
        <div id="map" class="rounded-3 mb-3" style="height: 550px;"></div>
      </div>
    </div>
  </div>
  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3"
         data-google-maps-target="mark"
         id="places-grid">
    </div>
  </div>
</div>
