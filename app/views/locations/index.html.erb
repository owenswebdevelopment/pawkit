<div data-controller="google-maps" class="container py-4">
  <h1>Nearby Search</h1>
  <!-- Category checkboxes -->
  <div class="btn-group" role="group">
    <input type="checkbox" class="btn-check" id="vet" name="category" value="Vet">
    <label class="btn btn-outline-primary" for="vet">Nearby Vets</label>
    <input type="checkbox" class="btn-check" id="petshop" name="category" value="Petshop">
    <label class="btn btn-outline-primary" for="petshop">Nearby Petshops</label>
  </div>
  <!-- Search button -->
  <button type="button"
          class="btn btn-success mb-3"
          data-action="google-maps#search">
    Search
  </button>
  <!-- The map -->
  <div id="map" style="width: 100%; height: 600px;"></div>
  <div data-google-maps-target="mark" class="mt-4">
  </div>
</div>
